.NOTPARALLEL:

ifndef config
  config=debug_win32
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_win32)
  lua53_config = debug_win32
  timer_config = debug_win32
endif
ifeq ($(config),debug_x64)
  lua53_config = debug_x64
  timer_config = debug_x64
endif
ifeq ($(config),debug_linux)
  lua53_config = debug_linux
  timer_config = debug_linux
endif
ifeq ($(config),release_win32)
  lua53_config = release_win32
  timer_config = release_win32
endif
ifeq ($(config),release_x64)
  lua53_config = release_x64
  timer_config = release_x64
endif
ifeq ($(config),release_linux)
  lua53_config = release_linux
  timer_config = release_linux
endif

PROJECTS := lua53 timer

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

lua53:
ifneq (,$(lua53_config))
	@echo "==== Building lua53 ($(lua53_config)) ===="
	@${MAKE} --no-print-directory -C lua53 -f Makefile config=$(lua53_config)
endif

timer: lua53
ifneq (,$(timer_config))
	@echo "==== Building timer ($(timer_config)) ===="
	@${MAKE} --no-print-directory -C timer -f Makefile config=$(timer_config)
endif

clean:
	@${MAKE} --no-print-directory -C lua53 -f Makefile clean
	@${MAKE} --no-print-directory -C timer -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_win32"
	@echo "  debug_x64"
	@echo "  debug_linux"
